<section class="shop">
  <div class="container">
    <div class="shop__inner">
      <div class="shop__filters filter">

        <div class="filter-category filter__item">
          <h3 class="filter-category__title filter__title">category</h3>
          <form class="filter-category__form" action="#">
            <label class="filter-category__label">
              <input class="filter-category__input" type="checkbox">
              <div class="filter-category__checkbox">
                <span>chair</span>
                <span>
                  <svg class="icon">
                    <use xlink:href="images/shop/arrow-r.svg#arrow-r"></use>
                  </svg>
                </span>
              </div>
            </label>

            <label class="filter-category__label">
              <input class="filter-category__input" type="checkbox">
              <div class="filter-category__checkbox">
                <span>table</span>
                <span>
                  <svg class="icon">
                    <use xlink:href="images/shop/arrow-r.svg#arrow-r"></use>
                  </svg>
                </span>
              </div>
            </label>

            <label class="filter-category__label">
              <input class="filter-category__input" type="checkbox">
              <div class="filter-category__checkbox">
                <span>lamp</span>
                <span>
                  <svg class="icon">
                    <use xlink:href="images/shop/arrow-r.svg#arrow-r"></use>
                  </svg>
                </span>
              </div>
            </label>

            <label class="filter-category__label">
              <input class="filter-category__input" type="checkbox">
              <div class="filter-category__checkbox">
                <span>watch</span>
                <span>
                  <svg class="icon">
                    <use xlink:href="images/shop/arrow-r.svg#arrow-r"></use>
                  </svg>
                </span>
              </div>
            </label>

            <label class="filter-category__label">
              <input class="filter-category__input" type="checkbox">
              <div class="filter-category__checkbox">
                <span>clock</span>
                <span>
                  <svg class="icon">
                    <use xlink:href="images/shop/arrow-r.svg#arrow-r"></use>
                  </svg>
                </span>
              </div>
            </label>
          </form>
        </div>

        <div class="filter-price filter__item">
          <h3 class="filter__title">price</h3>
          <form class="filter-price__form" action="#">
            <input class="filter-price__input" type="text" 
              data-min="0"
              data-max="1000"
              data-from="100"
              data-to="500">
            <label class="filter-price__label">
              <span>
                $<span class="filter-price__from"></span>.00
              </span>
              <span>
                $<span class="filter-price__to"></span>.00
              </span>
            </label>
          </form>
        </div>

        <div class="filter-brand filter__item">
          <h3 class="filter__title">brand</h3>
          <form class="filter-brand__form" action="#">
            <label class="filter-brand__label">
              <input class="filter-brand__input" type="checkbox">
              <div class="filter-brand__checkbox">
                <span class="filter-brand__name">RFL</span>
                <span class="filter-brand__quantity">(10)</span>
              </div>
            </label>

            <label class="filter-brand__label">
              <input class="filter-brand__input" type="checkbox">
              <div class="filter-brand__checkbox">
                <span class="filter-brand__name">Brothers</span>
                <span class="filter-brand__quantity">(31)</span>
              </div>
            </label>

            <label class="filter-brand__label">
              <input class="filter-brand__input" type="checkbox">
              <div class="filter-brand__checkbox">
                <span class="filter-brand__name">Regal</span>
                <span class="filter-brand__quantity">(3)</span>
              </div>
            </label>

            <label class="filter-brand__label">
              <input class="filter-brand__input" type="checkbox">
              <div class="filter-brand__checkbox">
                <span class="filter-brand__name">Nadia</span>
                <span class="filter-brand__quantity">(14)</span>
              </div>
            </label>

            <label class="filter-brand__label">
              <input class="filter-brand__input" type="checkbox">
              <div class="filter-brand__checkbox">
                <span class="filter-brand__name">Otobi</span>
                <span class="filter-brand__quantity">(6)</span>
              </div>
            </label>
          </form>
        </div>

        <div class="filter__item filter-recent">
          <h3 class="filter__title">recent Product</h3>
        </div>
      </div>

      <div class="shop__content"></div>
    </div>
  </div>
</section>